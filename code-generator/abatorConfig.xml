<generatorConfiguration>
  <classPathEntry location="&mysqlJAR;" />
  <context id="DB2Tables" targetRuntime="MyBatis3">
	
	<!-- beginningDelimiter和endingDelimiter：指明数据库的用于标记数据库对象名的符号，比如ORACLE就是双引号，MYSQL默认是`反引号； -->
	<property name="beginningDelimiter" value="`"/>
    <property name="endingDelimiter" value="`"/>
	<!-- 当表名或者字段名为SQL关键字的时候，可以设置该属性为true，MBG会自动给表名或字段名添加`分隔符 -->
	<property name="autoDelimitKeywords" value="true"/>
	
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://&dbHost;:3306/&dbName;"
        userId="root"
        password="&dbPassword;">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false"/>
    </javaTypeResolver>

    <javaModelGenerator targetPackage="com.tuitanews.domain" targetProject="&targetPrefix;&target;">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="com.tuitanews.persistence"  targetProject="&targetPrefix;&target;">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="com.tuitanews.persistence"  targetProject="&targetPrefix;&target;">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>
   
   
   <!-- schema即为数据库名, tableName为对应的数据库表, domainObjectName是要生成的实体类  -->
	
	
   <table schema="&dbName;" tableName="news_bean" domainObjectName="NewsBean" enableCountByExample="true" enableUpdateByExample="false" enableDeleteByExample="false"
        enableSelectByExample="true" selectByExampleQueryId="false">
      <property name="useActualColumnNames" value="false"/>
      <generatedKey column="id" sqlStatement="MySql" identity="true" />
	  <columnOverride column="content" property="content" javaType="java.lang.String" jdbcType="VARCHAR"/>
	  <columnOverride column="html" property="html" javaType="java.lang.String" jdbcType="VARCHAR"/>
	  <columnOverride column="content_with_imgs" property="contentWithImgs" javaType="java.lang.String" jdbcType="VARCHAR"/>
   </table>
